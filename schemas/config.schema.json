{
    "$schema": "http://json-schema.org/draft-07/schema",
    "properties": {
        "home_profile": {
            "type": "string",
            "enum": [
                "wsl",
                "nixos"
            ]
        },
        "username": {
            "type": "string"
        },
        "git": {
            "properties": {
                "username": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            },
            "required": [
                "username",
                "email"
            ],
            "type": "object"
        }
    },
    "required": [
        "username",
        "git"
    ],
    "type": "object"
}